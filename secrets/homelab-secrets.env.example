# Copy to secrets/homelab-secrets.env (do not commit).
# This is the single source of truth for secrets used by k8s manifests
# and host env files generated by scripts/render-secrets.sh.

# Cloudflare tunnel token from Zero Trust dashboard.
CLOUDFLARE_TUNNEL_TOKEN=REPLACE_WITH_CLOUDFLARE_TUNNEL_TOKEN

# libsql
SQLD_AUTH_JWT_KEY=REPLACE_WITH_LONG_RANDOM_HS256_SECRET

# Kopia (k8s + host)
KOPIA_REPOSITORY_PASSWORD=REPLACE_WITH_STRONG_RANDOM_PASSWORD
KOPIA_SERVER_USERNAME=kopia-admin
KOPIA_SERVER_PASSWORD=REPLACE_WITH_STRONG_RANDOM_PASSWORD
KOPIA_R2_ACCESS_KEY_ID=REPLACE_WITH_R2_ACCESS_KEY_ID
KOPIA_R2_SECRET_ACCESS_KEY=REPLACE_WITH_R2_SECRET_ACCESS_KEY
KOPIA_R2_BUCKET=REPLACE_WITH_R2_BUCKET_NAME
KOPIA_R2_ENDPOINT=https://REPLACE_ACCOUNT_ID.r2.cloudflarestorage.com

# Immich Postgres + Redis
IMMICH_DB_POSTGRES_PASSWORD=REPLACE_WITH_STRONG_RANDOM_PASSWORD
IMMICH_DB_PASSWORD=REPLACE_WITH_STRONG_RANDOM_PASSWORD
IMMICH_DB_REPLICATION_PASSWORD=REPLACE_WITH_STRONG_RANDOM_PASSWORD
IMMICH_REDIS_PASSWORD=REPLACE_WITH_STRONG_RANDOM_PASSWORD

# Vaultwarden
VAULTWARDEN_ADMIN_TOKEN=REPLACE_WITH_STRONG_RANDOM_ADMIN_TOKEN
