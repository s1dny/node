# Copy to secrets/secrets.env (do not commit).
# This is the single source of truth for secrets used by k8s manifests
# and host services on the NixOS machine.

# Cloudflare tunnel token from Zero Trust dashboard.
CLOUDFLARE_TUNNEL_TOKEN=

# Host identity (optional; defaults shown)
HOST_USERNAME=
HOST_HOSTNAME=

# Host Wi-Fi (optional; leave blank to disable auto-connect)
WIFI_SSID=
WIFI_PASSWORD=

# libsql
SQLD_AUTH_JWT_KEY=

# Kopia (k8s + host)
KOPIA_REPOSITORY_PASSWORD=
KOPIA_SERVER_HOSTNAME=
KOPIA_SERVER_USERNAME=
KOPIA_SERVER_PASSWORD=
KOPIA_R2_ACCESS_KEY_ID=
KOPIA_R2_SECRET_ACCESS_KEY=
KOPIA_R2_BUCKET=
KOPIA_R2_ENDPOINT=

# Immich Postgres + Redis
IMMICH_DB_POSTGRES_PASSWORD=
IMMICH_DB_PASSWORD=
IMMICH_DB_REPLICATION_PASSWORD=
IMMICH_REDIS_PASSWORD=

# Vaultwarden
VAULTWARDEN_ADMIN_TOKEN=
